generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model albums {
  id            Int       @id @default(autoincrement())
  title         String
  artist        String
  album_cover   String
  released      Int
  genre         String
  subgenre      String
  label         String
  description   String
  wikipedia_url String
}

model albums_seen {
  id            Int       @id @default(autoincrement())
  albumlist_id  Int
  created_at    DateTime  @default(now())
}


